<h1>
<% if (type === 'bitwise') {%>
  Bitwise
<% } else { %>
  Base
<% } %>
Levels
</h1>


<p>Welcome to the journey with Itty Bitty!</p>

<table id="levels_table">
  <thead>
    <tr>
	  <th>Level Number</th>
	  <th>Description</th>
	  <th>Difficulties</th>
    </tr>
  </thead>
  <tbody>
    <% for (var i = 0; i < levels.length; i++) { %>
      <tr>
        <td><a href="/tutorials/<%= type %>/<%= levels[i].level_num %>" style="display:block;"><%= levels[i].level_num %></a></td>
		<td><a href="/tutorials/<%= type %>/<%= levels[i].level_num %>" style="display:block;"><%= levels[i].description %></a></td>
		<td><a href="/tutorials/<%= type %>/<%= levels[i].level_num %>" style="display:block;"><%= levels[i].difficulty %></a></td>
      </tr>
    <% } %>
  </tbody>
</table>

<a href="/ref/<%= type %>">Reference sheet</a>
